# RTX 5090 (SM_120) with FlashAttention3 Support
# 목표: FA3 소스 빌드로 SM_120 지원 추가
FROM nvidia/cuda:12.8.0-devel-ubuntu22.04

# 시스템 패키지
RUN apt-get update && apt-get install -y \
    python3.11 \
    python3.11-dev \
    python3-pip \
    git curl wget vim \
    build-essential \
    ninja-build \
    cmake \
    && rm -rf /var/lib/apt/lists/*

# Python 3.11 기본 설정
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1 && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1

# pip 업그레이드
RUN python -m pip install --upgrade pip setuptools wheel

# PyTorch 2.10 nightly cu128 - 한 번만 설치하고 변경하지 않음
RUN pip install --pre torch torchvision torchaudio \
    --index-url https://download.pytorch.org/whl/nightly/cu128

# RTX 5090 빌드 환경 변수
ENV TORCH_CUDA_ARCH_LIST="12.0"
ENV CUDA_HOME=/usr/local/cuda
ENV CUDA_VISIBLE_DEVICES=0
ENV PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True
ENV MAX_JOBS=16

# FlashAttention3 소스 빌드 (SM_120 지원 추가)
RUN git clone https://github.com/Dao-AILab/flash-attention.git /flash-attention && \
    cd /flash-attention && \
    git checkout v2.7.0.post2 && \
    # hopper 디렉토리의 flash_attn 빌드
    cd hopper && \
    # setup.py에 SM_120 지원 추가
    python -c "import fileinput; import sys; \
    [sys.stdout.write(line.replace('9.0a', '9.0a;12.0a')) \
     for line in fileinput.input('setup.py', inplace=True)]" && \
    # FA3 빌드 (SM_120 포함)
    TORCH_CUDA_ARCH_LIST="9.0;12.0" MAX_JOBS=16 \
    pip install -v -e .

# FlashInfer 설치 (백업 옵션)
RUN pip install flashinfer -i https://flashinfer.ai/whl/cu128/torch2.10/ || \
    echo "FlashInfer not available for this configuration"

# vLLM 소스 다운로드
RUN git clone https://github.com/vllm-project/vllm.git /vllm && \
    cd /vllm && \
    git checkout v0.11.0

WORKDIR /vllm

# 빌드 의존성 설치
RUN pip install packaging ninja wheel cmake \
    numpy transformers tokenizers \
    sentencepiece protobuf \
    fastapi uvicorn pydantic \
    prometheus-client py-cpuinfo psutil \
    accelerate setuptools-scm

# vLLM 소스 빌드 (FA3 지원 포함)
RUN TORCH_CUDA_ARCH_LIST="12.0" MAX_JOBS=16 \
    VLLM_USE_FLASH_ATTN_V3=1 \
    pip install --no-build-isolation -v -e .

# HuggingFace 설정
ENV HF_HOME=/models
ENV TRANSFORMERS_CACHE=/models
ENV HF_HUB_OFFLINE=0

# 어텐션 백엔드 설정
ENV VLLM_ATTENTION_BACKEND=FLASH_ATTN
ENV VLLM_WORKER_MULTIPROC_METHOD=spawn
ENV VLLM_TORCH_COMPILE=0

RUN mkdir -p /models /app
WORKDIR /app

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# 런타임 테스트 스크립트
RUN echo '#!/bin/bash\n\
echo "=== RTX 5090 FA3 Configuration ==="\n\
python -c "import torch; print(f\"PyTorch: {torch.__version__}\")" \n\
python -c "import torch; print(f\"CUDA: {torch.version.cuda}\")" \n\
python -c "import torch; print(f\"CC: {torch.cuda.get_device_capability(0)}\")" \n\
python -c "import flash_attn; print(f\"FlashAttention: {flash_attn.__version__}\")" 2>/dev/null || echo "FA not available" \n\
python -c "import flashinfer; print(f\"FlashInfer: installed\")" 2>/dev/null || echo "FlashInfer not available" \n\
echo "=================================="\n' > /test_env.sh && chmod +x /test_env.sh

CMD ["python", "-m", "vllm.entrypoints.openai.api_server", \
     "--model", "openai/gpt-oss-20b", \
     "--dtype", "bfloat16", \
     "--gpu-memory-utilization", "0.90", \
     "--max-model-len", "8192", \
     "--tensor-parallel-size", "1", \
     "--host", "0.0.0.0", \
     "--port", "8000", \
     "--trust-remote-code", \
     "--enforce-eager", \
     "--disable-custom-all-reduce"]