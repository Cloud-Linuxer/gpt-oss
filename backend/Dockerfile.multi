FROM python:3.11-slim

# 시스템 패키지 업데이트 및 필요한 도구 설치
RUN apt-get update && apt-get install -y \
    sshpass \
    openssh-client \
    curl \
    jq \
    gcc \
    g++ \
    build-essential \
    supervisor \
    && rm -rf /var/lib/apt/lists/*

# 작업 디렉토리 설정
WORKDIR /app

# 의존성 파일 복사 및 설치
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 애플리케이션 코드 복사
COPY . .

# 환경변수 설정
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# 기본 환경변수
ENV ENV=production
ENV PORT=8080
ENV LOG_LEVEL=INFO

# Supervisor 설정 파일 생성
RUN echo '[supervisord]\n\
nodaemon=true\n\
logfile=/var/log/supervisor/supervisord.log\n\
pidfile=/var/run/supervisord.pid\n\
\n\
[program:backend]\n\
command=uvicorn app:app --host 0.0.0.0 --port 8080\n\
autostart=true\n\
autorestart=true\n\
stderr_logfile=/var/log/backend.err.log\n\
stdout_logfile=/var/log/backend.out.log\n\
\n\
[program:toolproxy]\n\
command=python proxy_with_tools.py\n\
autostart=true\n\
autorestart=true\n\
stderr_logfile=/var/log/toolproxy.err.log\n\
stdout_logfile=/var/log/toolproxy.out.log' > /etc/supervisor/conf.d/supervisord.conf

# 로그 디렉토리 생성
RUN mkdir -p /var/log/supervisor

# 포트 노출
EXPOSE 8080 8001

# 헬스체크 추가
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

# Supervisor로 여러 프로세스 실행
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]