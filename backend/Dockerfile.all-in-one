# All-in-One Tool Calling Proxy Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional dependencies for proxy
RUN pip install --no-cache-dir \
    fastapi==0.116.1 \
    uvicorn[standard]==0.35.0 \
    httpx==0.28.1 \
    pydantic==2.11.7

# Copy application files
COPY proxy_with_tools.py .
COPY tools/ ./tools/

# Create necessary directories
RUN mkdir -p /tmp /app/logs

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV VLLM_URL=http://host.docker.internal:8000/v1/chat/completions
ENV PROXY_PORT=8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Expose port 8001
EXPOSE 8001

# Run the all-in-one proxy
CMD ["python", "proxy_with_tools.py"]